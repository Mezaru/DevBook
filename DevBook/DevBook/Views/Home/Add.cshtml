@model HomeAddVM
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" />
<h1>Add Person</h1>
<body style="background-color:#1db954">
    <form asp-controller="Home" asp-action="Add">
        <label asp-for="person.FirstName"></label>
        <input asp-for="person.FirstName" />
        <span asp-validation-for="person.FirstName"></span>
        <br />
        <label asp-for="person.LastName"></label>
        <input asp-for="person.LastName" />
        <span asp-validation-for="person.LastName"></span>
        <br />
        <label asp-for="person.Email"></label>
        <input asp-for="person.Email" type="email" />
        <span asp-validation-for="person.Email"></span>
        <br />
        <label asp-for="person.PhoneNumber"></label>
        <input asp-for="person.PhoneNumber" />
        <span asp-validation-for="person.PhoneNumber"></span>
        <br />
        <label asp-for="person.Description"></label>
        <input asp-for="person.Description" type="text" />
        <span asp-validation-for="person.Description"></span>
        <br />
        <select asp-for="skills"></select>
        <br />
        <input style="background-color: white" type="submit" value="Add Person" />
    </form>
</body>