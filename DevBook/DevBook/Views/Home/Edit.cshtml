@model HomeEditVM
<body style="background-color:#74DE79">
    <div>
        <form asp-controller="Home" asp-action="edit">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
            <br />
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
            <br />
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" />
            <span asp-validation-for="Email"></span>
            <br />
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
            <br />
            <label asp-for="Description"></label>
            <textarea asp-for="Description" style="width: 200px; height: 200px" type="text"></textarea>
            <span asp-validation-for="Description"></span>  
            <br />
            @foreach (var item in Model.Skills)
            {
            <div>
                <input type="checkbox" name="@($"{nameof(HomeEditVM.SelectedSkills)}")" value="@item.Value" id="@item.Value" @(item.Selected ? "checked" : "") />
                <label for="@item.Value" class="checkbox-inline"> @item.Text  </label>
                </div>
            }
            <br />
            <input style="background-color: white" type="submit" value="Update" />
        </form>

        <form asp-controller="Home" asp-action="remove">
            <input style="background-color: white" type="submit" value="Remove person" />
        </form>
    </div>

